<h1>New Game</h1>
<!-- <p>Find me in app/views/games/new.html.erb</p> -->


<div class="letters-container">
  <% @letters.each do |letter| %>
    <div class="letter"><%= letter %></div>
  <% end %>
</div>

<form class="myForm" action="/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid_array, @letters %>
  <input class="text-input" type="text" name="word" placeholder="Enter your longest World!">
  <input class="submit-btn" type="submit" value="Play!">
</form>


